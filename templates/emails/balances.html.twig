<p>{{ 'Balances for' | trans }} :</p>
<ul>
   {% for b in banks %}
    <li>{{ b }}</li>
   {% endfor %}
</ul>
{% if balances|length > 0 %}
    <hr/>
    <table width="100%" class="table-bordered table-responsive table-striped">
        <thead>
            <tr>
                <th>{{ 'Date' | trans }}</th>
                <th>{{ 'Balance' | trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for d, b in balances %}
            <tr>
                <td>{{ d }}</td>
                <td>{% if b < 0 %}<span style="color: red; ">{% endif %}$ {{ b|number_format(2, ',', '.') }}{% if b < 0 %}</span>{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br/>
{% endif %}