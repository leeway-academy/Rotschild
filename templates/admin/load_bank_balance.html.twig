{% extends '@EasyAdmin/default/layout.html.twig' %}
{% form_theme form with easyadmin_config('design.form_theme') %}

{% block content_title %}Saldo del Banco "{{ bank }}" para el d√≠a {{ fecha | date('d/m/Y') }}{% endblock %}

{% block main %}
    <div class="table-responsive">
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td><strong>Ultimo saldo cargado</strong>: {{ initialBalance.fecha | date('d/m/y') }} $ {{ initialBalance.valor | number_format(2, ',', '.') }}</td>
                </tr>
                <tr>
                    <td><strong>Movimientos concretados desde el {{ initialBalance.fecha | date('d/m/Y') }} hasta el {{ fecha | date('d/m/Y') }}</strong></td>
                </tr>
                <tr>
                    <td>
                        <table class="table table-bordered">
                            {% for t in transactions %}
                                {% if t.concretado %}
                                    <tr>
                                        <td>{{ t }}</td>
                                    </tr>
                                {% endif %}
                            {% endfor %}
                        </table>
                    </td>
                </tr>
                <tr>
                    <td><strong>Saldo final esperado</strong>: $ {{ finalBalance.valor | number_format(2, ',', '.') }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    {{ form(form) }}
{% endblock %}

{% block body_javascript %}
    {{ parent() }}

    <script type="text/javascript">
        var saldoProyectado = {{ finalBalance.valor }};
        $("form").submit( function ( e, n ) {
            var saldoCargado = parseFloat( $('input[type="text"]').val() );
            var diff = Math.abs( saldoCargado - saldoProyectado);
            if ( diff > 1 ) {
                alert( 'Alerta: El saldo cargado no coincide con el proyectado. Diferencia: $ ' + ( diff ).toFixed(2) );
            }

            return true;
        });
    </script>
{% endblock %}