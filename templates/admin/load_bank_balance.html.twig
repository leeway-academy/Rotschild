{% extends '@EasyAdmin/default/layout.html.twig' %}
{% form_theme form with easyadmin_config('design.form_theme') %}

{% block content_title %}Saldo del Banco {{ entity.bank }} al d√≠a {{ fecha | date('d-m-Y') }} (Proyectado: <b>$ {{ proyectado | number_format( 2, ',', '.') }}.-</b>){% endblock %}

{% block main %}
    {{ form(form) }}
{% endblock %}

{% block body_javascript %}
    {{ parent() }}

    <script type="text/javascript">
        var saldoProyectado = {{ proyectado }};
        $("form").submit( function ( e, n ) {
            var saldoCargado = parseFloat( $('input[type="text"]').val() );
            if ( saldoCargado != saldoProyectado ) {
                alert( 'Alerta: El saldo cargado no coincide con el proyectado. Diferencia: $ ' + ( saldoCargado - saldoProyectado ) );
            }

            return true;
        });
    </script>
{% endblock %}