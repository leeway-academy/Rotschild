{% extends '@EasyAdmin/default/layout.html.twig' %}
{#{% form_theme form with easyadmin_config('design.form_theme') %}#}

{% block content_title %}Cheques aplicados{% if checks|length > 0 %} ({{ checks | length }}){% endif %}{% endblock %}

{% block main %}
    {% if checks|length > 0 %}
        {{ form_start(form) }}
        {{ form_errors(form) }}
	<div class="table-responsive">
        <table width="100%" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>{{ 'check.number' | trans }}</th>
                    <th>&nbsp;</th>
                    <th>{{ 'check.bank' | trans }}</th>
                    <th>&nbsp;</th>
                    <th>{{ 'check.client' | trans }}</th>
                    <th>&nbsp;</th>
                    <th>{{ 'check.type' | trans }}</th>
                    <th>&nbsp;</th>
                    <th>Fecha</th>
                    <th>&nbsp;</th>
                    <th>Acreditaci&oacute;n</th>
                    <th>&nbsp;</th>
                    <th>Monto</th>
                    <th>&nbsp;</th>
                    <th><span style="alignment: center">Destino</span></th>
                    <th>&nbsp;</th>
                    <th>{{ 'check.applied.outside' | trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for k, c in checks %}
                <tr>
                    <td>{{ c.number }}</td>
                    <td>&nbsp;</td>
                    <td>{{ c.sourceBank }}</td>
                    <td>&nbsp;</td>
                    <td>{{ c.issuer }}</td>
                    <td>&nbsp;</td>
                    <td>{{ c.type }}</td>
                    <td>&nbsp;</td>
                    <td>{{ c.date | date('d/m/Y')}}</td>
                    <td>&nbsp;</td>
                    <td>{{ c.creditDate | date('d/m/Y')}}</td>
                    <td>&nbsp;</td>
                    <td> ${{ c.amount | number_format(2, ',', '.') }}</td>
                    <td>&nbsp;</td>
                    <td>
                        <table>
                            <tr>
                                <td>{{ form_widget(attribute(form, 'bank_' ~ k )) }}</td>
                                <td>&nbsp;</td>
                                <td>{{ form_widget(attribute(form, 'debit_' ~ k )) }}</td>
                            </tr>
                        </table>
                    </td>
                    <td>&nbsp;</td>
                    <td>{{ form_widget(attribute(form, 'outside_' ~ k ), { 'class' : 'checkOutside'} ) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
	</div>
        {{ form_end(form) }}
    {% else %}
        No hay cheques aplicados por conciliar
    {% endif %}
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $('select').each( function( i, s ) {
            $(s).change( function () {
                parts = s.id.split(/_/);
                if ( s.id.indexOf('bank') > -1 ) {
                    targetId = 'form_debit_' + parts[2];
                } else if ( s.id.indexOf('debit') > -1 ) {
                    targetId = 'form_bank_' + parts[2];
                } else {
                    alert( 'Changing something else');
                }
                $('#' + targetId + " option:selected").removeAttr("selected");
                $('#form_outside_' + targetId.substr( targetId.lastIndexOf('_') + 1 ) ).prop('checked', false);
            })
        } );

        $('.check_outside').on('change', function(e) {
            var id = this.id;
            var checkId = id.substr( id.lastIndexOf('_') + 1 );

            var selectBankId = 'form_bank_' + checkId;
            var selectTxId = 'form_debit_' + checkId;

            $('#' + selectBankId).val([]);
            $('#' + selectTxId).val([]);
        });
    </script>
{% endblock %}
