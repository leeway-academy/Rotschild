{% extends '@EasyAdmin/default/layout.html.twig' %}
{% form_theme form with easyadmin_config('design.form_theme') %}

{% block content_title %}Conciliaci√≥n de extractos bancarios{% endblock %}

{% block main %}
    <div id="wait" style="display: none;">
        <h3>Cargando...</h3>
    </div>
    {{ form_start(form) }}
        {{ form_row(form.bank) }}
    <br/>
    <br/>
    <br/>
    <div style="width: 100%;height: 100%" class="table-responsive">
        <table width="100%" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Concepto</th>
                    <th>Importe</th>
                    <th>Movimiento presupuestado</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
            {% for k, l in summaryLines %}
                {% if l.importe > 0 %}
                    {% set txType = 'Credito' %}
                {% else %}
                    {% set txType = 'Debito' %}
                {% endif %}
                <tr>
                    <td>{{ l.fecha | date('d/m/Y') }}</td>
                    <td>{{ l.concepto }}</td>
                    <td>$ {{ l.importe | number_format(2, ',', '.')}}</td>
                    <td>{{ form_widget(form['match-' ~ k], { 'attr' : { 'class' : 'selectTx' } }) }}</td>
                    <td><a href="#" onclick="add_tx();">{{ 'Add transaction' | trans }}</a></td>
                    <td><a href="#" onclick="update_tx('{{ form['match-' ~ k].vars.id }}', '{{ txType }}');" style="display: none;" id="update_tx-{{ k }}">{{ 'Update transaction' | trans }}</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}

    <!-- Modal -->
    <div class="modal fade" id="txFormModal" tabindex="-1" role="dialog" aria-labelledby="txFormModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="txFormModalTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" id="modal-body">
                    <p>This is the body!!</p>
                </div>
                {#<div class="modal-footer">#}
                    {#<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>#}
                    {#<button type="button" class="btn btn-primary">Save changes</button>#}
                {#</div>#}
            </div>
        </div>
    </div>
{% endblock %}

{% block body_javascript %}
    {{ parent() }}
    <script type="text/javascript">
        $('#form_bank').change(function(){
            if ( selectedBankId = $('#form_bank').val() ) {
                window.location.href = Routing.generate('match_bank_summaries', { bankId: selectedBankId });
            }
        });

        $('.selectTx').on('change', function( e ){
            var selectId = this.id;
            var selectedValue = this.value;

            if ( selectedValue ) {
                $( '#update_tx-' + selectId.substr(selectId.indexOf('-') + 1 ) ).show();
            } else {
                $( '#update_tx-' + selectId.substr(selectId.indexOf('-') + 1 ) ).hide();
            }
        });

        $(document).ajaxStart(function(){
            $("#wait").css("display", "block");
        });

        $(document).ajaxComplete(function(){
            $("#wait").css("display", "none");
        });

        function add_tx( txType )
        {
            txId = $('#' + selectId).val();
            $.get(
                Routing.generate('easyadmin', { 'entity' : txType, 'action' : 'edit', 'id' : txId }),
                function( data ) {
                    $('#txFormModalTitle').text('{{ 'Add transaction' | trans }}');
                    $('.modal-body').html( data );
                    $('#txFormModal').modal('show');
                }
            );
        }

        function update_tx( selectId, txType )
        {
            txId = $('#' + selectId).val();
            $.get(
                Routing.generate('easyadmin', { 'entity' : txType, 'action' : 'edit', 'id' : txId }),
                function( data ) {
                    $('#txFormModalTitle').text('{{ 'Update transaction' | trans }}');
                    $('.modal-body').html( data );
                    $('#txFormModal').modal('show');
                }
            );
        }

    </script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% endblock %}
